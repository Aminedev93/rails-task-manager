<div class="container">
  <h1>Tasks : Show</h1>
  <div class="card">
    <h3><%= @task.title %></h3>
    <p><%= @task.details %></p>
    <p><%= @task.completed %></p>
  </div>
  <%= link_to "Delete This Task", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  %>
  <%= link_to "Edit This Task", edit_task_path(@task) %>
  <%= link_to "Go Back", tasks_path %>
</div>
